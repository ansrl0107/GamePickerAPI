{
    "title": "Check post recommend",
    "endpoint": "/posts/:post_id/recommend",
    "method": "get",
    "request": {
        "headers": {
            "x-access-token": "Token from '/auth/login'"
        }
    },
    "response": [
        {
            "status": 200,
            "data": {
                "recommend": "True/false"
            }
        },
        {
            "status": 400,
            "data": {
                "message": "'x-access-token' is required."
            }
        },
        {
            "status": 400,
            "data": {
                "message": "'x-access-token' is included, but can not be decoded."
            }
        },
        {
            "status": 404,
            "data": {
                "message": "User not found."
            }
        }
    ]
}