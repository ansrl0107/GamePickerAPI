{
    "title": "Rate the game",
    "endpoint": "/games/:game_id/score",
    "method": "put",
    "request": {
        "headers": {
            "x-access-token": "Token from '/auth/login'"
        },
        "body": {
            "score": "game score"
        }
    },
    "response": [
        {
            "status": 204,
            "data": null
        },
        {
            "status": 400,
            "data": {
                "message": "'x-access-token' is required."
            }
        },
        {
            "status": 400,
            "data": {
                "message": "'x-access-token' is included, but can not be decoded."
            }
        },
        {
            "status": 401,
            "data": {
                "message": "Administrator authentication required"
            }
        },
        {
            "status": 404,
            "data": {
                "message": "Can not find user matching token. It may be an old token."
            }
        }
    ]
}